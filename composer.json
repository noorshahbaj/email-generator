{
    "name": "noorshahbaj/email-generator",
    "description": "This is a random Email generator. This is our very first php package!",
    "keywords": [
        "noorshahbaj",
        "email-generator"
    ],
    "homepage": "https://github.com/noorshahbaj/email-generator",
    "license": "MIT",
    "authors": [
        {
            "name": "JABALE NOOR SHAHBAJ",
            "email": "nurmohammadshahbaj@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "fakerphp/faker": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3.7",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Noorshahbaj\\EmailGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Noorshahbaj\\EmailGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
            "test-coverage": "vendor/bin/phpunit --no-coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
